		"copy-webpack-plugin": "^11.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"eslint-import-resolver-typescript": "^3.6.0",
		"mini-css-extract-plugin": "^2.7.6",
		"sass": "^1.67.0",
		"sass-loader": "^13.3.2",
